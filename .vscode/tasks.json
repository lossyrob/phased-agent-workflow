{
  "version": "2.0.0",
  "tasks": [
    {
      // Compile the TypeScript extension once. This task is referenced by the
      // launch configurations to ensure the extension is built before debugging.
      "type": "npm",
      "script": "compile",
      "group": "build",
      "problemMatcher": "$tsc",
      "label": "npm: compile",
      "detail": "tsc -p ./",
      "presentation": {
        "reveal": "silent",
        "close": true
      }
    },
    {
      // Watch mode: continuously recompile TypeScript on file changes.
      // Useful for iterative development. Start this task manually with
      // Terminal > Run Task > "npm: watch"
      "type": "npm",
      "script": "watch",
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "label": "npm: watch",
      "detail": "tsc -watch -p ./",
      "isBackground": true,
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
